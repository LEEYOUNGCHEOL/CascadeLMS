<h2>Editing Programming Language '<%= @programming_language.name %>'</h2>

<div id="form_area">
<% form_tag( :action => 'update', :id => @programming_language ) do %>
  <%= render :partial => 'form' %>
<div class="submit">
  <%= submit_tag 'Edit' %>
</div>
<% end %>

</div>
<%= link_to 'Show', :action => 'show', :id => @programming_language %> |
<%= link_to 'Back', :action => 'list' %>
