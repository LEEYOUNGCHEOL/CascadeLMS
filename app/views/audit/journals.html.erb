<% if @student.nil? %>
 <div class="alert alert-error">Invalid request</div>
<% else %>

 <% if @journals.length == 0 %>
  <div class="alert">There are no journals entries for <%= @student.display_name %>.</div>
 <% else %>

 <table class="table table-condensed">
 <%= render :partial => '/instructor/turnins/journalheader' %>
 <% count = 0 %>
 <% for journal in @journals %>
	 <% count = count.next 
	     odd = "odd"
	     odd = "even" if count.even?
	   %>
  <%= render :partial => "/instructor/turnins/journal", :locals => { :odd => odd, :journal => journal } %>
 <% end %>
 </table>

 <% end %>
<% end %>
