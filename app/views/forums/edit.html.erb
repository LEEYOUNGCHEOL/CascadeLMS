<h3>Edit Post</h3>

<% form_tag( {:action => 'submit_post', :topic => @topic.id, :id => @post.id}, {:class => 'form-horizontal'} ) do %>
  <%= render :partial => 'post_form' %>
  <%= submit_tag("Submit Post", {:class => 'btn btn-primary'}) %>
  <%= link_to 'Cancel', {:action => 'read', :id => @topic.id}, {:class => 'btn'} %>
<% end %>
