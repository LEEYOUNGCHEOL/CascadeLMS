<div id="form_area">
<h2>New forum topic for <%= @course.title %></h2>
<p><%= link_to 'Cancel', :action => 'index' %></p>

<% form_tag( :action => 'create_forum' ) do %>
  <%= render :partial => 'topic_form' %>
<div class="submit">
  <%= submit_tag "Create Topic" %>
</div>
<% end %>

</div>

<p><%= link_to 'Cancel', :action => 'index' %></p>