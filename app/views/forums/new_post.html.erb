
<h2>Course: <%= @course.title %></h2>
<h3>Forum: <%= @topic.topic %></h3>

<p><b>Creating new post</b> | <%= link_to 'Cancel', :action => 'view_topic', :id => @topic.id %></p>

<div id="form_area">
<% form_tag( :action => 'submit_post', :topic => @topic.id ) do %>
  <%= render :partial => 'post_form' %>
<div class="submit">
  <%= submit_tag "Submit Post" %>
</div>
<% end %>

</div>


<p><%= link_to 'Cancel', :action => 'view_topic', :id => @topic.id %></p>