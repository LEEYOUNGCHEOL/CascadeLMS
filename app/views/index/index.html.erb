
<%= error_messages_for 'user', :class => "ErrorExplanation"  %>

<% if @login_error %>
<div class="errorExplanation"><%= @login_error %>
</div>
<% end %>

<% if session && ! session[:post_login].nil? && ! session[:post_login].eql?('') %>
<div class="errorExplanation">Your previous previous request has been saved and will be processed after logging in.</div>
<% end %>	


<h1><%= @app['title'] %></h1>

<div id="form_area">
<% form_tag( :action => 'login' ) do %>
  <p class="blockintro">
	<b>Please login:</b> Enter your username and password.</p>
  <div class="block">
  <label for="user_uniqueid" class="required">Username:</label>
  <%= text_field 'user', 'uniqueid', 'tabindex' => '1' %> <br/>

  <label for="user_password" class="required">Password:</label>
   <%= password_field 'user', 'password', 'tabindex' => '2' %>
  </div>

<% if @app['authtype'].eql?('basic') %>
  <p><%= link_to 'I forgot my password...', :controller => '/index', :action => 'forgot' %></p>
<% end %> 

  <div class="submit">
    <%= submit_tag 'Login', 'tabindex' => '3' %>
  </div>
<% end %>
</div>

