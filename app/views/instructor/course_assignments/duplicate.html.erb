<h2>Duplicate Assignment for <%= @course.title %></h2>

<% form_tag( { :action => 'clone' }, :multipart => true, :onsubmit => "new Element.toggle('button'); new Element.toggle( 'spinner');", :class => 'form-horizontal' ) do %>

  <%= render :partial => 'form', :locals => { :edit_mode => false, :clone => true } %>

  <div id="button">
    <%= submit_tag 'Clone Selected Assignment', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', {:controller => '/instructor/course_assignments', :action => 'index', :course => @course, :id => nil, :assignment => nil}, {:class => 'btn'} %>
  </div>
  <div id="spinner" style="display: none;"><%= image_tag 'spinner.gif' %></div>
<% end %>
