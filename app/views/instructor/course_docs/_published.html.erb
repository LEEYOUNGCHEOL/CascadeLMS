<% 
if document.published 
  img_url = 'icon-ok-sign'
  status = 'yes'
else
  img_url = 'icon-minus-sign'
  status = 'no'
end 
%>
<%= link_to_remote( "<i class=\"#{img_url}\"></i> #{status}", :update => "published_#{document.id}", :url => { :action => 'toggle_published', :id => document.id }, :complete => "new Effect.Highlight( 'published_#{document.id}' )" ) %>