<h2>Editing folder '<%= @document.title %>'</h2>

<% unless @folder.nil? %>
<div class="alert alert-info">Nested in <strong><%= @folder.relative_path() %></strong></div>
<% end %>

<% form_tag( { :action => 'update_folder', :id => @document }, {:multipart => true, :class => 'form-horizontal'} ) do %>
  <%= render :partial => 'folder_form' %>

  <%= submit_tag('Edit Folder', {:class => 'btn btn-primary'}) %>
  <%= link_to('Back', {:action => 'index', :id => @document.document_parent}, {:class => 'btn'}) %>
<% end %>
