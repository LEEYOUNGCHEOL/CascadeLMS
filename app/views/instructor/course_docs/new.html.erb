<h2>New Document</h2>

<% unless @folder.nil? %>
<div class="alert alert-info">New document nested in <strong><%= @folder.relative_path() %></strong></div>
<% end %>

<% form_tag( { :action => 'create', :id => @folder_id }, :multipart => true, :onsubmit => "new Element.toggle('button');new Element.toggle('spinner');", :class => 'form-horizontal' ) do %>
  <%= render :partial => 'form' %>

  <div id="button">
    <%= submit_tag('Create', {:class => 'btn btn-primary'}) %>
    <%= link_to('Cancel', {:action => 'index', :id => @folder_id}, {:class => 'btn'}) %>
  </div>
  <div id="spinner" style="display: none;"><%= image_tag 'spinner.gif' %></div>
<% end %>
