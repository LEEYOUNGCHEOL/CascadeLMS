<fieldset>
  <legend>Course title is the short title (course number).  For example, 'CS 101'.</legend>

  <div class="control-group">
    <label for='course_title' class="control-label">Title:</label>
    <div class="controls">
      <%= text_field 'courseo', 'title', :class => 'input-large'  %>
    </div>
  </div>
  <div class="control-group">
	<label for='course_short_description' class="control-label">Description:</label>
	<div class="controls">
	  <%= text_field 'courseo', 'short_description', :class => 'input-xlarge' %>
	  <p class="help-block">Description is a more formal course title.<br/>For example 'Introduction to Computer Science'.</p>
	</div>
  </div>
  <p class="help-block">The following information is not required but would most likely be helpful to your students.</p>
  <div class="control-group">
    <label class="control-label" for='course_information_meeting_days'>Meeting Days:</label>
    <div class="controls">
      <%= text_field 'course_information', 'meeting_days', :class => 'input-large' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for='course_information_meeting_time'>Meeting Times:</label>
    <div class="controls">
      <%= text_field 'course_information', 'meeting_time', :class => 'input-large' %>
    </div>
  </div>
  <div class="control-group">
	<label class="control-label" for='course_information_room'>Location:</label>
	<div class="controls">
      <%= text_field 'course_information', 'room', :class => 'input-large' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for='course_information_office_hours'>Office Hours:</label>
    <div class="controls">
      <%= text_field 'course_information', 'office_hours', :class => 'input-large' %>
    </div>
  </div>
</fieldset>