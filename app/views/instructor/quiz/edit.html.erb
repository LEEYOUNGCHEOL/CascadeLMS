<h2>Edit Quiz/Survey for <%= @course.title %></h2>

<% form_tag( { :action => 'update', :course => @course, :id => @assignment }, :multipart => true, :onsubmit => "new Element.toggle('button'); new Element.toggle( 'spinner');", :class => 'form-horizontal' ) do %>
  <%= render :partial => 'form', :locals => { :edit_mode => true, :clone => false } %>

  <div id="button">
    <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', {:action => 'questions', :course => @course, :id => @assignment}, {:class => 'btn'} %>
  </div>
  <div id="spinner" style="display: none;"><%= image_tag 'spinner.gif' %></div>
<% end %>
