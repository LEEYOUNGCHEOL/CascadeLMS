<h2>Edit Question for
<% if @assignment.quiz.survey %>
  Survey:
<% else %>
  Quiz:
<% end %>
'<%= @assignment.title %>'</h2>

<% form_tag({:action => 'update_question', :course => @course, :id => @assignment, :question => @quiz_question}, {:class => 'form-horizontal'}) do %>
  <%= render :partial => 'question_form' %>

  <%= submit_tag 'Save Changes to Question', {:class => 'btn btn-primary'} %>
  <%= link_to 'Back to Quiz/Survey', {:controller => '/instructor/quiz', :course => @course, :action => 'questions', :id => @assignment}, {:class => 'btn'} %>
<% end %>	
