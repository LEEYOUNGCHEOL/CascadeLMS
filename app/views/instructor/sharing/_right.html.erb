<h3>Search for instructors:</h3>
<% if @course.course_open %>
<div id="search_area">
<% form_remote_tag( :update => 'search_results', :url => { :action => :search, :id => @course }, :complete => "new Effect.BlindDown('search_results');", :class => 'form-search' ) do %>
	<%= text_field_tag 'searchterms', '', {:placeholder => 'Instructor Search', :class => 'input-medium search-query'}%>
	<%= submit_tag 'Search', :class => 'btn btn-primary' %><br/>
	<% end %>
<span id="spinner" style="display: none;"><%= image_tag 'spinner.gif' %></span>
</div>

<div id="search_results" style="display: none;">
</div>
<% else %>
<i><b>Disabled:</b> this course is in archive status.</i>
<% end %>