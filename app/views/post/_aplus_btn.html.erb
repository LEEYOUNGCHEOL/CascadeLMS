<%= link_to_remote( 'A+', {:url => {:controller => '/post', :action => 'aplus', :course => nil, :assignment => nil, :item => item.id }, :update => "iap#{item.id}"}, {:class => "btn btn-mini #{'btn-success' if item.user_aplus?(user)}"} ) %> <span class="badge badge-info"><%= item.aplus_count %></span> <% if item.aplus_count > 0 %><% apusers = item.aplus_users(@user, 10) %> <% for apu in apusers %><%= render :partial => '/profile/hovercard', :locals => {:user => apu, :size => 30} %><% end %><% if item.aplus_count > apusers.size %> and <%= item.aplus_count - apusers.size %> more<% end %> <% end %>