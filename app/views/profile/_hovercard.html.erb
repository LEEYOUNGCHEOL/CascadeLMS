<% carddata = "
  Year: #{h user.user_profile.year rescue '?'}<br/>
  Major: #{h user.user_profile.major rescue '?'}
  ".gsub('"', '&quot;') %><a href="#" rel="popover" title="<%= user.display_name %>" data-trigger="hover" data-html="true" data-content="<%= carddata %>" data-placement="bottom"><img src="<%= user.gravatar_url(request.ssl?, size) %>" class="aplus_pic" /></a>